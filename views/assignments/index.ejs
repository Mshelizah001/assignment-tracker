<%- include("../partials/header") %>

<h1 class="mb-4">My Assignments</h1>

<% if (user) { %>
  <p>Welcome, <strong><%= user.name %></strong>. You can create, edit, and delete assignments.</p>

  <div class="d-flex gap-2 mb-3">
    <a href="/assignments/new" class="btn btn-main">Add New Assignment</a>
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>

<% } else { %>
  <p>You are not logged in. You can only <strong>view</strong> assignments. Login to add, edit, or delete.</p>
<% } %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (!assignments || assignments.length === 0) { %>
      <tr>
        <td colspan="6">I don't have any assignments yet.</td>
      </tr>
    <% } else { %>
      <% assignments.forEach(assignment => { %>
        <tr>
          <td><%= assignment.title %></td>
          <td><%= assignment.course %></td>
          <td><%= assignment.dueDate.toDateString() %></td>
          <td><%= assignment.status %></td>
          <td><%= assignment.priority %></td>
          <td>
            <% if (user) { %>
              <a href="/assignments/<%= assignment._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
              <a href="/assignments/<%= assignment._id %>/delete" class="btn btn-sm btn-outline-danger">Delete</a>
            <% } else { %>
              <small>Login to edit/delete</small>
            <% } %>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<%- include("../partials/footer") %>
