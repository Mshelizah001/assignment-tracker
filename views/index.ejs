<%- include("partials/header") %>

<div class="row align-items-center">

  <!-- Left side: main text -->
  <div class="col-md-6 mb-4">

    <span class="badge bg-warning text-dark mb-2">Assignment Tracker</span>
    <h1 class="display-5 fw-bold mb-3">Stay on top of your school work.</h1>
    <p class="lead mb-4">
      I use this app to keep all my assignments in one place, so I can see what is due,
      what I finished, and what I still need to start.
    </p>

    <!-- AUTHENTICATION LOGIC STARTS HERE -->
    <% if (user) { %>

      <p class="text-success mb-3">
        Logged in as <strong><%= user.name %></strong>
      </p>

      <div class="d-flex gap-2 mb-3">
        <a href="/assignments" class="btn btn-main btn-lg">View My Assignments</a>
        <a href="/assignments/new" class="btn btn-outline-secondary btn-lg">Add New Assignment</a>
      </div>

      <a href="/logout" class="btn btn-danger btn-lg">Logout</a>

    <% } else { %>

      <p class="text-danger mb-3">
        You are not logged in. You can only <strong>view</strong> assignments.
      </p>

      <div class="d-flex flex-column gap-2 mb-3">
        <a href="/auth/google" class="btn btn-outline-primary btn-lg">Login with Google</a>
        <a href="/auth/github" class="btn btn-outline-dark btn-lg">Login with GitHub</a>
      </div>

      <a href="/assignments" class="btn btn-main btn-lg">View Assignments (Read-Only)</a>

    <% } %>
    <!-- AUTH LOGIC ENDS HERE -->

  </div>

  <!-- Right side: simple info card -->
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <h5 class="card-title mb-3">Why I built this</h5>
        <p class="card-text">
          I wanted a simple web app where I can:
        </p>
        <ul class="mb-3">
          <li>Create new assignments with due dates</li>
          <li>See all my tasks in one list</li>
          <li>Update status as I work on them</li>
          <li>Delete old tasks when I am done</li>
        </ul>
      </div>
    </div>
  </div>

</div>

<%- include("partials/footer") %>
